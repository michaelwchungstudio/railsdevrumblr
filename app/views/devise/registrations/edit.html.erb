<div class='content-wrapper'>
  <h1 class='content-title'>EDIT PROFILE</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class='user-form-wrapper'>

      <%= f.label :email, "E-mail", :class => "form-title" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-text-field" %>
      <br>
      <%= f.label :fname, "First Name", :class => "form-title" %>
      <%= f.text_field :fname, autofocus: true, autocomplete: "first name", :class => "form-text-field" %>
      <br>
      <%= f.label :lname, "Last Name", :class => "form-title" %>
      <%= f.text_field :lname, autofocus: true, autocomplete: "last name", :class => "form-text-field" %>
      <br>
      <%= f.label :location, :class => "form-title" %>
      <%= f.text_field :location, autofocus: true, autocomplete: "location", :class => "form-text-field" %>
        <br>
      <%= f.label :birthday, :class => "form-title" %>
      <%= f.text_field :birthday, autofocus: true, autocomplete: "birthday", :class => "form-text-field" %>
      <br>
      <%= f.label :password, "New Password", :class => "form-title" %>
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-text-field" %>
      <br>
      <%= f.label :password_confirmation, "New Password Confirmation", :class => "form-title" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-text-field" %>
      <br>
      <%= f.label :current_password, "Current Password (to confirm changes)", :class => "form-title" %>
      <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-text-field" %>

    </div>

    <div class="actions">
      <%= f.submit "UPDATE", :class => "submit-button" %>
    </div>
  <% end %>

  <h1 class='content-title'>CANCEL ACCOUNT</h1>

  <%= button_to "CANCEL", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "submit-button" %></p>

</div>
